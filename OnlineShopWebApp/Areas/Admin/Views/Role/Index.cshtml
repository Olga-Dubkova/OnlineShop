@model List<RoleModel>
@{
	ViewData["Title"] = "Role";
	int count = 0;
}
<div class="row">
	@await Html.PartialAsync("AdminLeftMenu")
	<div class="col-10">
		<h3 class="text-center">Список ролей</h3>
		<a asp-area="Admin" asp-controller="Role" asp-action="Add">Добавить новую роль</a>
		<table class="table">
			<thead>
				<tr>
					<th>№</th>
					<th>Название</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var role in Model)
				{
					<tr>
						<td>@(count = count + 1)</td>
						<td>@role.Name</td>
						<td><a asp-area="Admin" asp-controller="Role" asp-action="Remove" asp-route-name="@role.Name">Удалить</a>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>