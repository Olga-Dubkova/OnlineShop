@model List<UserAccount>

@{
	ViewData["Title"] = "User";
	int count = 0;
}

<div class="row">
	@await Html.PartialAsync("AdminLeftMenu")
	<div class="col-10">
		<h3 class="text-center">Список пользователей</h3>
		<table class="table">
			<thead>
				<tr>
					<th>№</th>
					<th>Логин(email)</th>
					<th>Имя</th>
					<th>Телефон</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var account in Model)
				{
					<tr>
						<td>@(count = count + 1)</td>
						<td>@account.Login</td>
						<td>@account.Name</td>
						<td>@account.Phone</td>
						<td><a asp-area="Admin" asp-controller="User" asp-action="Detail" asp-route-login="@account.Login">Подробнее</a>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
