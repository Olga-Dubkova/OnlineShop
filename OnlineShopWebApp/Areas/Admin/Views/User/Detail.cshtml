@model UserAccount

<div class="row">
    <div class="col col-3">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>
    <div class="col col-9">
        <h6 class="display-6">Пользователь @Model.Login</h6>
        <table class="table">
            <tr>
                <th>Имя</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Телефон</th>
                <td>@Model.Phone</td>
            </tr>
        </table>
        <div>
            <div class="dropdown show">
				<a class="btn btn-dark dropdown-toggle" href="#" data-toggle="dropdown">
                    Действие
                </a>
                <div class="dropdown-menu">
					<a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-id="@Model.Login">Смена пароля</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-login="@Model.Login">Редактирование</a>
					<a class="dropdown-item" asp-area="Home" asp-controller="" asp-action="" asp-route-id="@Model.Login">Права доступа</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Remove" asp-route-login="@Model.Login">Удалить</a>
                </div>
            </div>
        </div>
    </div>
</div>
