@model ChangePassword

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")
    <div class="col-6">
        <h3 class="text-center">Смена пароля</h3>
        <form method="post">
            <div class="row" asp-validation-summary="All">
                <div class="col">

                    <input type="hidden" name="login" value="@Model.Login" />

                    <label asp-for="Password">Пароль</label><br>
                    <input type="text" asp-for="Password" value="@Model.Password">><br>
                    <span asp-validation-for="Password"></span><br>
                    
                    <label asp-for="ConfirmPassword">Подтверждение пароля</label><br>
                    <input asp-for="ConfirmPassword" value="@Model.ConfirmPassword">><br>
                    <span asp-validation-for="ConfirmPassword"></span><br>
                    
                    <br>
                    <button class="btn btn-dark" type="submit" asp-area="Admin" asp-controller="User" asp-action="ChangePassword">Сохранить</button>
                </div>
            </div>
        </form>
    </div>
</div>
