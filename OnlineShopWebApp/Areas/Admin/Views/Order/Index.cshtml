
@model List<OrderViewModel>
@{
	ViewData["Title"] = "Order";
	int count = 0;
}
<div class="row">
	@await Html.PartialAsync("AdminLeftMenu")
	<div class="col-10">
		<h3 class="text-center">Список заказов</h3>
		<table class="table">
			<thead>
				<tr>
					<th>№</th>
					<th>Сумма</th>
					<th>Статус</th>
					<th>Дата</th>
					<th>Время</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var order in Model)
				{
					<tr>
						<td>@(count = count + 1)</td>
						<td>@order.Cost</td>
						<td>@EnumHelper.GetDisplayName(order.Status)</td>
						<td>@order.CreateDataTime.ToString("d")</td>
						<td>@order.CreateDataTime.ToString("t")</td>
						<td><a asp-area="Admin" asp-controller="Order" asp-action="Detail" asp-route-id="@order.Id">Подробнее</a>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

