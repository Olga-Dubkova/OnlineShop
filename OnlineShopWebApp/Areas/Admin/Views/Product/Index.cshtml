
@model List<ProductViewModel>
@{
	ViewData["Title"] = "Products";
	int count = 0;
}
<div class="row">
	@await Html.PartialAsync("AdminLeftMenu")
	<div class="col-10">
		<h3 class="text-center">Список продуктов</h3>
		<a asp-area="Admin" asp-controller="Product" asp-action="Add">Добавить новый товар</a>
		<table class="table">
			<thead>
				<tr>
					<th>№</th>
					<th>Id</th>
					<th>Наименование</th>
					<th>Цена</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var product in Model)
				{
					<tr>
						<td>@(count = count + 1)</td>
						<td>@product.Id</td>
						<td><a asp-area="Admin" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a></td>
						<td>@product.Cost</td>
						<td><a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id">Редактировать</a>
						<td><a asp-area="Admin" asp-controller="Product" asp-action="Remove" asp-route-id="@product.Id">Удалить</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
