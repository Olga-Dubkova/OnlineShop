@model RegisterModel

<form method="post">
	<div class="text-center" asp-validation-summary="All">
		<div>
			<h2>Регистрация</h2>
		</div>

		<div class="row">
			<div class="col">
				<input asp-for="Login" placeholder="Логин/email" />
				<span asp-validation-for="Login"></span>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col">
				<input asp-for="Phone" placeholder="Телефон" />
				<span asp-validation-for="Phone"></span>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col">
				<input asp-for="Name" placeholder="Имя" />
				<span asp-validation-for="Name"></span>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col">
				<input asp-for="Password" placeholder="Пароль" />
				<span asp-validation-for="Password"></span>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col">
				<input type="password" asp-for="ConfirmPassword" placeholder="Подтвердите пароль" />
				<span asp-validation-for="ConfirmPassword"></span>
			</div>
		</div>
		<br />
		<div>
			<button class="btn btn-dark" type="submit" asp-controller="Account" asp-action="Register">Зарегистрироваться</button>		
		</div>
	</div>
</form>
