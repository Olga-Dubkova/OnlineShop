@model LoginModel

<form method="post">
	<div class="text-center">
		<div>
			<h2>ВХОД</h2>
		</div>

		<div class="row">
			<div class="col">
				<input asp-for="Login" placeholder="Логин/email" />
				<span asp-validation-for="Login"></span>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col">
				<input asp-for="Password" placeholder="Пароль" />
				<span asp-validation-for="Password"></span>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col">
				<div class="form-check">
					<input class="form-check-input" type="checkbox" name="rememberMe" value="true" id="flexCheckChecked" checked />
					<label class="form-check-label" for="flexCheckChecked">Запомнить меня?</label>
				</div>
			</div>
		</div>
		<div>
			<button class="btn btn-dark" type="submit" asp-controller="Account" asp-action="Login">Войти</button>		
		</div>
		<div>
			<a class="nav-link text-decoration-none" type="submit" asp-controller="Account" asp-action="Register">Регистрация нового пользователя</a>
		</div>
	</div>
</form>


