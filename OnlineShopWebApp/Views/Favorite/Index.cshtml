@model List<ProductViewModel>


@if (Model == null || Model.Count == 0)
{
    <h3>В избранном нет товаров</h3>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-4 card shadow">
                <img class="card-img-top"
             src=@product.ImagePath>
                <div class="card-body">
                    <a style="color:black" href="/product/index/@product.Id">
                        <h5>@product.Name</h5>
                    </a>
                    <h5>@product.Cost руб.</h5>
                    <a class="btn btn-dark" href="/cart/add?productId=@product.Id" role="button">Добавить в корзину</a>
                    <br />
                    <br />
                    <a class="btn btn-dark" href="/favorite/remove?productId=@product.Id" role="button">✕</a>
                </div>
            </div>
        }
    </div>
}
